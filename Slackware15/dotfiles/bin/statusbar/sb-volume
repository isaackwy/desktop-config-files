#!/bin/sh

# Clickable options. Code taken from Luke Smith:
# https://raw.githubusercontent.com/LukeSmithxyz/voidrice/master/.local/bin/statusbar/sb-volume
case $BLOCK_BUTTON in
	1) setsid -f pavucontrol ;;
	2) pactl set-sink-mute @DEFAULT_SINK@ toggle ;;
	3) notify-send "📢 Volume module" "\- Shows volume , 󰝟 if muted. \n- Left click to open pavucontrol.\n- Middle click to mute.\n- Scroll to change." ;;
	4) pactl set-sink-volume @DEFAULT_SINK@ +2% ;;
	5) pactl set-sink-volume @DEFAULT_SINK@ -2% ;;
esac

vol="$(pacmd list-sinks | grep -A 15 '* index' | awk '/volume: front/{ print $5 }' | tr -d %)"
muted_status="$(pacmd list-sinks | grep -A 15 '* index' | awk '/muted: /{ print $2 }')"

# Display mute/unmute status
[ "$muted_status" != no ] && echo "^b#90b1b1^^c#2a5c45^  " && exit

# Volume icon taken from waybar (requires FontAwesome)
case 1 in
	$((vol >= 70)) ) icon="" ;;
	$((vol >= 30)) ) icon="" ;;
	$((vol >= 1)) ) icon="" ;;
	* ) echo "^b#90b1b1^^c#2a5c45^  " && exit ;;
esac

# Display volume
echo "^b#f1c40f^^c#000000^ $icon $vol%"
