#!/bin/sh

DATE="$(date '+%R')"
echo "^b#64727d^^c#ffffff^ ${DATE}"

case $BLOCK_BUTTON in
    1) setsid -f gsimplecal ;;
    2) pkill gsimplecal ;;
    3) notify-send "ðŸ“… Time/date module" "\- Left click to open gsimplecal.\n- Middle click (or left click on a running gsimplecal instance) to close gsimplecal." ;;
esac
