#!/bin/sh

HOUR=$(date '+%I')

case "$HOUR" in
	"00") icon="ğŸ•›" ;;
	"01") icon="ğŸ•" ;;
	"02") icon="ğŸ•‘" ;;
	"03") icon="ğŸ•’" ;;
	"04") icon="ğŸ•“" ;;
	"05") icon="ğŸ•”" ;;
	"06") icon="ğŸ••" ;;
	"07") icon="ğŸ•–" ;;
	"08") icon="ğŸ•—" ;;
	"09") icon="ğŸ•˜" ;;
	"10") icon="ğŸ•™" ;;
	"11") icon="ğŸ•š" ;;
	"12") icon="ğŸ•›" ;;
esac

case $BLOCK_BUTTON in
    1) setsid -f gsimplecal ;;
    2) pkill gsimplecal ;;
    3) notify-send "ğŸ“… Time/date module" "\- Left click to open gsimplecal.\n- Middle click (or left click on a running gsimplecal instance) to close gsimplecal." ;;
esac

echo "^b#64727d^^c#ffffff^ $icon $(date '+%R')"

