#!/bin/sh

HOUR=$(date '+%I')

case "$HOUR" in
	"00") icon="🕛" ;;
	"01") icon="🕐" ;;
	"02") icon="🕑" ;;
	"03") icon="🕒" ;;
	"04") icon="🕓" ;;
	"05") icon="🕔" ;;
	"06") icon="🕕" ;;
	"07") icon="🕖" ;;
	"08") icon="🕗" ;;
	"09") icon="🕘" ;;
	"10") icon="🕙" ;;
	"11") icon="🕚" ;;
	"12") icon="🕛" ;;
esac

case $BLOCK_BUTTON in
    1) setsid -f gsimplecal ;;
    2) pkill gsimplecal ;;
    3) notify-send "📅 Time/date module" "\- Left click to open gsimplecal.\n- Middle click (or left click on a running gsimplecal instance) to close gsimplecal." ;;
esac

echo "^b#64727d^^c#ffffff^ $icon $(date '+%R')"

